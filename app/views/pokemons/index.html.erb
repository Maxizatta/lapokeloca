<div class="text-center">
  <h1 class="text-primary">List of Pokemons</h1>
</div>

<div class="container">
  <div class="row">
    <% @pokemons.each_with_index do |pokemon, index| %>
      <div class="col-md-4">
        <div class="card my-3 mx-3" style="width: 18rem;">
          <img class="card-img-top" src= <%= pokemon.imagen %> alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title"> <%= pokemon.name %> </h5>
            <p class="card-text"> <%= pokemon.weight %> Kg </p>
            <a href="<%= pokemon_path(pokemon) %>" class="btn btn-primary no-underline">Check more details!</a>
          </div>
        </div>
      </div>
      <% if (index + 1) % 3 == 0 %>
        </div>
        <div class="row">
      <% end %>
    <% end %>
  </div>
</div>
